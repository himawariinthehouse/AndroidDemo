<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mark.androiddemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/actionbar_icon"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="org.mark.androiddemo.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.mark.androiddemo.SecondActivity"
            android:label="@string/title_activity_second"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name="org.mark.androiddemo.ThirdActivity"
            android:label="@string/title_activity_third" >
        </activity>
        <activity
            android:name="org.mark.androiddemo2.ViewPagerActivity"
            android:label="@string/title_activity_view_pager" >
        </activity>
        <activity
            android:name="org.mark.androiddemo.FragmentView"
            android:label="@string/title_activity_fragment_view" >
        </activity>
        <activity
            android:name="org.mark.listview.ListViewActivity"
            android:label="@string/title_activity_list_view" >
        </activity>
    </application>

</manifest>
